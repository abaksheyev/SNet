
@using SNet.Common
@using SNet.Web.Helpers;

@model SNet.Web.Models.Account.RegistrationAccoutStep1Model


@section Header
{
    @Model.Header
}


@{
    var ajaxOptions =
        new AjaxOptions
            {
                HttpMethod = "post"
            };
}

@using (Ajax.BeginForm(MVC.Account.RegistrationProcessing(), ajaxOptions, new {id = "ajaxForm"}))
{

    @Html.LocalizedLabelFor(x=>x.Email)
    @Html.EditorFor(x=>x.Email)

    @Html.LocalizedLabelFor(x=>x.Username)
    @Html.EditorFor(x=>x.Username)

    
    @Html.LocalizedLabelFor(x=>x.Password)
    @Html.EditorFor(x=>x.Password)

    @Html.LocalizedLabelFor(x=>x.VerifyPassword)
    @Html.EditorFor(x=>x.VerifyPassword)

        
    <button 
        type="submit" 
        data-theme="b" 
        name="submit" 
        value="step2" 
        class="ui-btn-hidden" 
        aria-disabled="false">Next</button>

}